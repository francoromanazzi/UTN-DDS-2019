{{#partial "contenido"}}
	<style>
		@media (min-width: 576px) {
    		.card-columns {
        		column-count: 1;
    		}
		}

			@media (min-width: 768px) {
    		.card-columns {
        		column-count: 1;
    		}
		}

		@media (min-width: 992px) {
    		.card-columns {
        		column-count: 1;
    		}
		}

		@media (min-width: 1200px) {
		    .card-columns {
		        column-count: 1;
		    }
		}
	</style>
    <h1 class="text-center mb-4">Guardarropas</h1>
    <div class="text-center mb-4">
        <a class="btn btn-primary" href="/guardarropas/nuevo">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Agregar Nuevo Guardarropa
        </a>
    </div>
<div class="container py-5 bg-faded" style="padding: 0 0 0 0 !important;">
	<div class="card-columns">
    {{#each this}}
        <div class="card mb-4 guardarropa-card">
            <a class="nav-link" href="/guardarropas/{{id}}/prendas">
                <div class="card-body">
                    <h4 class="card-title">Guardarropas {{sumar1 @index}}</h4>
                    <p style="margin-bottom: 1%;">Propietarios:
                        {{#each usuariosPropietarios}}
                            <span>{{nombre}}.</span>
                        {{/each}}
                    </p>
                    <p>Cantidad de prendas: {{size prendas}}</p>
                </div>
            </a>
        </div>
    {{/each}}
    </div>
</div>

    <script>
        let params = new URLSearchParams(document.location.search.substring(1));
        let prendaAgregada = params.get("prendaAgregada");
        if(prendaAgregada === "1"){
            bs4pop.notice('Prenda agregada exitosamente', {
                type: 'success',
                position: 'bottomcenter',
                appendType: 'append',
                closeBtn: false,
                className: ''
            })
        }
    </script>
{{/partial}}

{{>layout.hbs}}