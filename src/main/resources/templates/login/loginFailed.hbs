{{#partial "contenido"}}

    <h1 class="text-center">Bienvenido a Que Me Pongo</h1>
    <div class="icono">
        <img src="/img/logo.png" alt="remera">
    </div>
    <div class="ContentForm">
    	<h2 style="font-color: red;">El usuario y contraseña ingresado no coinciden con nuestros registros</h2>
    	
    	<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
  			<div class="toast-header">
    			<img src="..." class="rounded mr-2" alt="...">
    			<strong class="mr-auto">Bootstrap</strong>
    			<small class="text-muted">11 mins ago</small>
    			<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      			<span aria-hidden="true">&times;</span>
    			</button>
  			</div>
  			<div class="toast-body">
    			El usuario y contraseña ingresado no coinciden con nuestros registros.
  			</div>
		</div>
    	
        <form action="/login" method="post" name="FormEntrar">
            <div class="input-group input-group-lg">
                <input type="email" class="form-control" name="username" placeholder="Usuario" id="Username" aria-describedby="sizing-addon1" required>
            </div>
            <br>
            <div class="input-group input-group-lg">
                <input type="password" name="password" class="form-control" placeholder="******" aria-describedby="sizing-addon1" required>
            </div>
            <br>
            <button class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit">Entrar</button>
        </form>
    </div>
    </div>
{{/partial}}

{{>layout.hbs}}