{{#partial "contenido"}}
    <link rel="stylesheet" href="/css/login.css">

    <h1 class="text-center">Bienvenido a Que Me Pongo</h1>
    <div class="icono">
        <img src="/img/logo.png" alt="remera">
    </div>
    <div class="ContentForm">
        <form action="/login" method="post" name="FormEntrar">
            <div class="input-group input-group-lg" id="username-container">
                <input type="text" class="form-control" name="username" placeholder="Usuario" id="Username" aria-describedby="sizing-addon1" value="" required>
            </div>
            <br>
            <div class="input-group input-group-lg" id="password-container">
                <input type="password" name="password" class="form-control" placeholder="******" aria-describedby="sizing-addon1" value="" required>
            </div>
            <br>
            <button class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit">Entrar</button>
            <p class="text-center lead mt-4">No tenes una cuenta?
                <a class="text-primary" href="/registro">
                    Registrate
                </a>
            </p>
        </form>
    </div>
    
    <script>
    	bs4pop.notice('Nombre de usuario y/o contrasena incorrecta', {
    		type: 'danger',
    		position: 'bottomcenter',
    		appendType: 'append',
    		closeBtn: false,
    		className: ''
    	})
    </script>
{{/partial}}

{{>layout.hbs}}