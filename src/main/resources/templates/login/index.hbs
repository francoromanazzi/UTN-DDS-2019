{{#partial "contenido"}}

    <h1 class="text-center">Bienvenido a Que Me Pongo</h1>
    <div class="icono">
        <img src="/img/logo.png" alt="remera">
    </div>
    <div class="ContentForm">
        <form action="/login" method="post" name="FormEntrar">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control" name="username" placeholder="Usuario" id="Username" aria-describedby="sizing-addon1" value="" required>
            </div>
            <br>
            <div class="input-group input-group-lg">
                <input type="password" name="password" class="form-control" placeholder="******" aria-describedby="sizing-addon1" value="" required>
            </div>
            <br>
            <input class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit" value="Entrar"/>
        </form>
    </div>
{{/partial}}

{{>layout.hbs}}