{{#partial "contenido"}}
    <link rel="stylesheet" href="/css/login.css">

    <h1 class="text-center">Bienvenido a Que Me Pongo</h1>
    <div class="icono">
        <img src="/img/logo.png" alt="remera">
    </div>
    <div class="ContentForm">
        <form action="/login" method="post" name="FormEntrar">
            <div class="input-group input-group-lg" id="username-container">
                <input type="text" class="form-control" name="username" placeholder="Usuario" id="Username"
                       aria-describedby="sizing-addon1" value="" required>
            </div>
            <br>
            <div class="input-group input-group-lg" id="password-container">
                <input type="password" name="password" class="form-control" placeholder="******"
                       aria-describedby="sizing-addon1" value="" required>
            </div>
            <br>
            <input class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit" value="Entrar"/>
            <p class="text-center lead mt-4">No tenes una cuenta?
                <a class="text-primary" href="/registro">
                    Registrate
                </a>
            </p>
        </form>
    </div>

    <script>
        let params = new URLSearchParams(document.location.search.substring(1));
        let loginFailed = params.get("loginFailed");
        if(loginFailed === "1"){
            bs4pop.notice('Username/password incorrectos', {
                type: 'danger',
                position: 'bottomcenter',
                appendType: 'append',
                closeBtn: false,
                className: ''
            })
        }

        let logoutExitoso = params.get("logoutExitoso");
        if(logoutExitoso === "1"){
            bs4pop.notice('Cierre de sesion exitoso', {
                type: 'success',
                position: 'bottomcenter',
                appendType: 'append',
                closeBtn: false,
                className: ''
            })
        }

        let registroExitoso = params.get("registroExitoso");
        if(registroExitoso === "1"){
            bs4pop.notice('Registro exitoso', {
                type: 'success',
                position: 'bottomcenter',
                appendType: 'append',
                closeBtn: false,
                className: ''
            })
        }
    </script>
{{/partial}}

{{>layout.hbs}}